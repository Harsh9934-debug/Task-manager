<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Project</title>
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen text-white bg-zinc-900">
      <div class="form p-10">
        <form action="/create" method="post">
          <input
            class="block px-5 rounded-md outline-none py-2 mt-2 w-full bg-zinc-600"
            type="text"
            placeholder="Tittle"
            name="title"
          />
          <textarea
            class="block w-full px-5 outline-none rounded-md mt-2 py-2 bg-zinc-600 resize-none"
            placeholder="Description"
            name="description"
          ></textarea>
          <input
            class="bg-blue-600 px-4 py-2 rounded-md mt-5"
            type="submit"
            value="Create task"
          />
        </form>
      </div>
      <div class="tasks p-10 flex gap-3 flex-wrap">
        <% if(file.length >0 ){%> <% file.forEach(function(val){ %>
        <div class="task w-72 px-3 py-4 bg-zinc-600 rounded-md">
          <h1 class="text-white text-xl tracking-tighter"><%= val %></h1>
          <a class="text-blue-500 inline-block mt-3" href="/show/<%= val %>">Read more</a>
          <a class="text-white pl-10 " href="/edit/<%= val %>">Edit filename </a>
          <a class="text-white pl-4" method="post" href="/download/<%= val %>"><i class="ri-download-2-line"></i></a>
          <form action="/delete/<%= val %>" method="post" class="inline-block">
            <button
              class=" p-2 rounded-md mt-5 hover:bg-red-700 transition-colors"
              type="submit"
              title="Delete task"
            >
              <i class="ri-delete-bin-line text-xl"></i>
            </button>
          </form>        
        </div>
        <% }) %> <% } else {%>
        <h3 class="p-10 text-gray-500">No task yet</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
